---
// src/components/Header.astro
---

<header>
  <div class="container">
    <a href="/" class="logo">
      <img src="/images/logoTGT.jpg" alt="Logo Perusahaan" class="logo-img" />
      <span>PT. TAPIAN GODANG TUA</span>
    </a>
    <button
      id="menuToggle"
      class="menu-toggle"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <span class="hamburger" aria-hidden="true"></span>
    </button>

    <nav id="mainNav" aria-label="Primary">
      <ul>
        <li><a href="/">Beranda</a></li>
        <li><a href="/tentang">Tentang Kami</a></li>
        <!--  <li><a href="/layanan">Layanan</a></li> -->
        <li><a href="/proyek">Galeri Proyek</a></li>
        <li><a href="/kontak">Hubungi Kami</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    background: #fff;
    border-bottom: 3px solid var(--secondary-color);
    padding: 10px 0;
    position: sticky; /* Membuat navbar tetap di atas saat di-scroll */
    top: 0;
    z-index: 1000;
  }

  .container {
    display: flex; /* Mengaktifkan Flexbox */
    justify-content: space-between; /* Mendorong item ke ujung (logo kiri, nav kanan) */
    align-items: center; /* Menyelaraskan item secara vertikal di tengah */
    width: 85%;
    margin: auto;
  }

  /* MODIFICATION START: Styling for the new logo layout */
  .logo {
    font-size: 24px;
    font-weight: bold;
    color: var(--primary-color);
    text-decoration: none;

    /* 1. Use Flexbox to align image and text */
    display: flex;
    align-items: center; /* Vertically center them */
    gap: 12px; /* Add space between image and text */
  }

  .logo-img {
    /* 2. Control the size of the logo image */
    height: 40px;
  }

  nav ul {
    list-style: none; /* Menghilangkan titik-titik list */
    margin: 0;
    padding: 0;
    display: flex; /* Menggunakan Flexbox untuk menu */
    gap: 20px; /* Memberi jarak antar menu */
  }

  nav a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  nav a:hover {
    color: #fff;
    background-color: var(--accent-color);
  }

  /* Mobile menu toggle (hidden on desktop) */
  .menu-toggle {
    display: none;
    background: transparent;
    border: 0;
    cursor: pointer;
    padding: 8px;
  }
  .menu-toggle .hamburger {
    display: block;
    width: 26px;
    height: 2px;
    background: var(--primary-color);
    position: relative;
  }
  .menu-toggle .hamburger::before,
  .menu-toggle .hamburger::after {
    content: "";
    position: absolute;
    left: 0;
    width: 26px;
    height: 2px;
    background: var(--primary-color);
  }
  .menu-toggle .hamburger::before {
    top: -8px;
  }
  .menu-toggle .hamburger::after {
    top: 8px;
  }

  /* Mobile nav styles */
  header {
    position: sticky;
    top: 0;
    z-index: 1100;
  }
  @media (max-width: 900px) {
    .container {
      width: 92%;
    }
    nav {
      position: absolute;
      top: 100%;
      right: 12px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      transform-origin: top right;
      opacity: 0;
      visibility: hidden;
      transform: scaleY(0.95) translateY(-8px);
      transition:
        opacity 180ms ease,
        transform 180ms ease,
        visibility 180ms;
      min-width: 200px;
    }
    nav.open {
      opacity: 1;
      visibility: visible;
      transform: scaleY(1) translateY(0);
    }
    nav ul {
      display: block;
      padding: 8px 12px;
    }
    nav ul li {
      margin: 6px 0;
    }
    nav a {
      display: block;
      padding: 8px 10px;
      border-radius: 6px;
    }
    .menu-toggle {
      display: block;
    }
    /* hide desktop horizontal menu spacing */
    nav ul {
      gap: 0;
    }
  }
</style>

<script type="module">
  // Toggle mobile menu
  const menuToggle = document.getElementById("menuToggle");
  const mainNav = document.getElementById("mainNav");
  if (menuToggle && mainNav) {
    menuToggle.addEventListener("click", () => {
      const expanded = menuToggle.getAttribute("aria-expanded") === "true";
      menuToggle.setAttribute("aria-expanded", String(!expanded));
      mainNav.classList.toggle("open");
    });

    // close menu when clicking outside
    document.addEventListener("click", (e) => {
      if (!mainNav.contains(e.target) && !menuToggle.contains(e.target)) {
        mainNav.classList.remove("open");
        menuToggle.setAttribute("aria-expanded", "false");
      }
    });
  }
</script>

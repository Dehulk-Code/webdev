---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout pageTitle="Hubungi Kami">
  <section class="contact-section">
    <div class="container">
      <h2>Hubungi Kami</h2>
      <p class="section-subtitle">
        Kami siap membantu mewujudkan proyek Anda. Jangan ragu untuk menghubungi
        kami untuk konsultasi atau permintaan penawaran.
      </p>

      <div class="contact-grid">
        <div class="contact-info">
          <h3>Informasi Kontak</h3>
          <p>
            <strong>Alamat:</strong><br />
            Jl. Raya Cilincing No. 29, Kecamatan Cilincing, Jakarta Utara, 14120,
            Indonesia
          </p>
          <p>
            <strong>Telepon:</strong><br />
            (021) 1234-5678
          </p>
          <p>
            <strong>Email:</strong><br />
            info@tapiangodangtua.com
          </p>
          <p>
            <strong>Jam Operasional:</strong><br />
            Senin - Jumat, 07:30 - 17:30 WIB
          </p>
          <p>Sabtu, 07:30 - 12:00 WIB</p>
        </div>

        <div class="contact-form">
          <h3>Kirim Pesan Cepat</h3>
          <form>
            <input type="text" placeholder="Nama Lengkap Anda" required />
            <input type="email" placeholder="Alamat Email Anda" required />
            <input type="text" placeholder="Subjek Pesan" />
            <textarea
              rows="6"
              placeholder="Tulis pesan Anda di sini..."
              required></textarea>
            <button type="submit" class="btn">Kirim Pesan</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <section class="map-section">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3967.11330364966!2d106.8971433147686!3d-6.11535999557444!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e6a1e0b0e0b0e0b%3A0x0!2sJl.%20Raya%20Cilincing%20No.29!5e0!3m2!1sen!2sid!4v1678888888888!5m2!1sen!2sid"
      width="100%"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    >
    </iframe>
  </section>
</BaseLayout>

<style>
  .contact-section {
    padding: 60px 0;
  }
  .container {
    width: 85%;
    margin: auto;
  }
  .contact-section h2 {
    text-align: center;
    font-size: 32px;
    margin-bottom: 20px;
    color: var(--primary-color);
  }
  .section-subtitle {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 40px auto;
    color: var(--dark-gray);
  }

  /* Grid untuk layout 2 kolom */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .contact-info p {
    line-height: 1.8;
  }
  .contact-info strong {
    color: var(--primary-color);
  }

  /* Styling untuk Formulir */
  .contact-form form {
    display: flex;
    flex-direction: column;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-family: inherit; /* Mewarisi font dari body */
  }

  .contact-form .btn {
    display: inline-block;
    padding: 12px 25px;
    background: var(--secondary-color);
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background 0.3s;
    margin: 5px;
  }

  .contact-form .btn:hover {
    background: var(--accent-color);
  }

  .map-section {
    border-top: 1px solid #eee;
  }

  /* Membuat responsif di layar kecil */
  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr; /* Tumpuk kolom jadi 1 */
    }
  }
</style>
